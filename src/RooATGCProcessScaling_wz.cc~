void RooATGCProcessScaling_wz::initializeProfiles() {
  int const N_bins=15;
  P_dk = new TH2D*[N_bins]();
  P_dg1 = new TH2D*[N_bins]();
  P_dkdg1 = new TH2D*[N_bins]();
}

